{% extends 'base.html.twig' %}

{% block title %}Author details
{% endblock %}

{% block body %}
	<section class="container px-4">
		<h1>Author Details:</h1>
		{% if author is not null %}
			<div class="card mb-1 m-auto mt-4">
				<div class="card-body">
					<div class="card-title d-flex justify-content-between">
						<h4 class="mb-1">{{ author.name }}</h4>
						<small class="text-muted">Id :
							{{ author.id }}</small>
					</div>
					<div class="d-flex justify-content-between card-text">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">Date of birth :
								{{ author.dateOfBirth | date('d M Y') }}</li>
							<li class="list-group-item">Date of death :
								{{ author.dateOfDeath is not null ? author.dateOfDeath | date('d M Y') : "still hangin' baby!" }}</li>
						</ul>
						<p>
							<small>Nationality:
								{{ author.nationality }}</small>
						</p>
					</div>
				</div>
			</div>
			<a href="{{ path('app_admin_author_index') }}" class="btn btn-primary mt-4">Return</a>
			<a href="{{ path('app_admin_author_edit', {id: author.id}) }}" class="btn btn-warning mt-4">Edit</a>

		{% else %}
			<div class="alert alert-danger mt-4" role="alert">
				Author 404 not found
			</div>
		{% endif %}
	</section>
{% endblock %}
