{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<section class="container px-4">
		<h1>Book :</h1>

		{% if book is not null %}
			<div class="card mb-1 m-auto">
				<div class="card-body">
					<div class="card-title d-flex justify-content-between">
						<h4 class="mb-1">{{ book.title }}</h4>
						<small class="text-muted">Id :
							{{ book.id }}</small>
					</div>
					<div class="d-flex justify-content-between card-text">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<h5>Edited at :
								</h5>
								{{ book.editedAt|date('d M Y') }}</li>
							<li class="list-group-item">
								<h5>ISBN :
								</h5>
								{{ book.isbn }}</li>
							<li class="list-group-item">
								<h5>Author :
								</h5>
								<ul class="list-group list-group-flush">
									{% for author in book.authors %}
										<li class="list-group-item">
											<a href="{{ path('app_admin_author_show', {id: author.id}) }}">{{ author.name }}</a>
										</li>
									{% else %}
										<li class="list-group-item">Author unknown</li>
									{% endfor %}
								</ul>
							</li>
							<li class="list-group-item">
								<h5>Editor :
								</h5>
								{# <a href="{{ path('app_admin_editor_show', {id: book.editor.id}) }}">{{ book.editor.name }}</a> #}
								{{ book.editor.name }}
							</li>
							<li class="list-group-item">
								<h5>Page number:
								</h5>
								{{ book.pageNumber }}</li>
							<li class="list-group-item">
								<h5>Plot :
								</h5>
								{{ book.plot }}</li>
						</ul>
						<div>
							<img src="{{ book.cover }}" alt="Cover of {{ book.title }}">
						</div>
					</div>
				</div>
			</div>
		{% else %}
			<div>Book 404 not found</div>
		{% endif %}
		<a href="{{ path('app_admin_book_index') }}" class="btn btn-primary">Return</a>
		<a href="{{ path('app_admin_book_edit', {id: book.id}) }}" class="btn btn-warning">Edit</a>
	</section>
{% endblock %}
